<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Salesforce UAT Test Suite">
<listeners>
      <listener class-name="org.uncommons.reportng.HTMLReporter"/>
      <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
  </listeners>
  
  <parameter name="browser" value="firefox"/>
  <test verbose="2" name="Default test">
  
    <classes>

      <class name="UAT.Salesforce.TestSuite.Login"></class>
       <class name ="UAT.Salesforce.TestSuite.Lead"></class>
        <class name ="UAT.Salesforce.TestSuite.Pack"></class>
        <class name ="UAT.Salesforce.TestSuite.Add"></class>
       
    </classes>
  </test>
</suite>